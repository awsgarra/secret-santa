<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Santa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <h3><%= link_to 'Draw Santas!', draw_santas_path, method: :post %></h3>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.santa.try(:name) %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

